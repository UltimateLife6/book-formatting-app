# Environment Configuration
# Copy this file to .env.local and update the values

# App Configuration
REACT_APP_NAME=Book Formatter
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# API Configuration (for future backend integration)
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=10000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_ENABLE_GOOGLE_DOCS=true

# Google API Configuration (for Google Docs integration)
# Get these from Google Cloud Console: https://console.cloud.google.com/
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here
REACT_APP_GOOGLE_API_KEY=your_google_api_key_here

# File Upload Limits
REACT_APP_MAX_FILE_SIZE_MB=50
REACT_APP_ALLOWED_FILE_TYPES=docx,txt,rtf

# Export Configuration
REACT_APP_DEFAULT_PDF_QUALITY=0.92
REACT_APP_DEFAULT_EPUB_VERSION=3.0

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true

# Error Reporting (for future integration)
REACT_APP_SENTRY_DSN=
REACT_APP_ERROR_REPORTING_ENABLED=false
